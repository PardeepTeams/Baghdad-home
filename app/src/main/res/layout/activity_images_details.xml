<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_back_arrow"/>

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:text="@string/photos"
                android:layout_centerInParent="true"
                android:textColor="@color/darkGrey"
                android:textSize="20dp" />
        </LinearLayout>

        <!-- Custom Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tabPhotos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/photos"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/skyBlue" />

            <TextView
                android:id="@+id/tabFloorPlan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:text="@string/floor_plan"
                android:textSize="14sp"
                android:textColor="@color/blackNew" />

            <TextView
                android:id="@+id/tabMap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/map"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:textSize="14sp"
                android:textColor="@color/blackNew" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

    <LinearLayout
        android:id="@+id/llLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/contact_whatsapp"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="3dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outline_round"
                        android:backgroundTint="@color/green"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="3dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_whatsapp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_whatsapp"
                            android:layout_marginStart="5dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/img_whatsapp"
                            android:text="@string/whatsapp"
                            android:textColor="@color/whiteNew"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/contact_call"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="3dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outline_round"
                        android:backgroundTint="@color/skyBlue"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="3dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_call"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_call_new"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/img_call"
                            android:textSize="16sp"
                            android:text="@string/call"
                            android:textColor="@color/whiteNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlChat"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="3dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outline_round"
                        android:backgroundTint="@color/skyBlue"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="3dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_chat"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_message"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/img_chat"
                            android:textSize="16sp"
                            android:text="@string/chat"
                            android:textColor="@color/whiteNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
