<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ChatHistoryActivity">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:text="@string/chats"
            android:textColor="@color/darkGrey"
            android:textSize="20dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardView"
        android:layout_below="@+id/rlHeader"
        android:layout_width="wrap_content"
        app:cardCornerRadius="30dp"
        android:clipToPadding="false"
        app:cardElevation="4dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        app:contentPadding="3dp"
        android:layout_marginHorizontal="10dp"
        app:cardUseCompatPadding="false"
        android:clipChildren="false"
        android:outlineAmbientShadowColor="@color/grey"
        android:outlineSpotShadowColor="@color/grey"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingVertical="10dp"
            android:paddingHorizontal="14dp">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search_new" />

            <EditText
                android:id="@+id/et_serach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_toStartOf="@+id/img_clear_search"
                android:layout_toEndOf="@+id/img_search"
                android:background="@null"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:hint="@string/search_chat"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_clear_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_clear" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cv_cardView"
        tools:listitem="@layout/layout_chats"
        android:paddingBottom="110dp"
        android:clipToPadding="false"/>

</RelativeLayout>