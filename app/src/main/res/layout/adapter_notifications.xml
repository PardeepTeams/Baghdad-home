<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_toStartOf="@+id/rlAction"
        android:text="@string/report_add"
        android:fontFamily="@font/hacen_tunisia_bold_regular"
        android:textColor="@color/darkGrey"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_body"
        android:text="@string/report_add"
        android:layout_below="@+id/tv_title"
        android:layout_toStartOf="@+id/rlAction"
        android:fontFamily="@font/hacen_tunisia_bold_regular"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_body"
        android:background="@color/grey_ul"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:id="@+id/rlAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/imv_clear"
            android:src="@drawable/ic_cancel"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/imv_check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="-5dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>