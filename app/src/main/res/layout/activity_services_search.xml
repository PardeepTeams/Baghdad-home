<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ServicesSearchActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow" />

        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@+id/img_back"
            android:layout_width="match_parent"
            app:cardCornerRadius="30dp"
            android:clipToPadding="true"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:outlineAmbientShadowColor="@color/grey"
            android:outlineSpotShadowColor="@color/grey"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingVertical="7dp"
                android:paddingHorizontal="14dp">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search_new" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toStartOf="@+id/img_clear_search"
                    android:layout_toEndOf="@+id/img_search"
                    android:background="@null"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:hint="@string/company_search"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="18sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_clear_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_clear" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_companies_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/company_found"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/hacen_tunisia_bold_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/grey_ul"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_service_companies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="30dp"
            android:clipToPadding="false"/>
    </LinearLayout>


</RelativeLayout>