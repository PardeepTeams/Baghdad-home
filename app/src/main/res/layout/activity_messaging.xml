<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.MessagingActivity">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back_arrow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPerson"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/img_back"
            android:src="@drawable/img_placeholder"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_toEndOf="@+id/imgPerson"
            android:text=""
            android:textColor="@color/darkGrey"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvLastSeen"
            android:layout_toEndOf="@+id/imgPerson"
            android:layout_below="@+id/tvName"
            android:text=""
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_ul"
        android:layout_below="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="3dp"
        android:background="@color/grey_ul" />


    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/viewUl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ul"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/imgSendMessage"
            android:layout_below="@+id/viewUl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_message"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toStartOf="@id/imgSendMessage"
            android:hint="@string/enter_message"
            android:layout_centerVertical="true"
            android:paddingHorizontal="20dp"
            android:inputType="textMultiLine|textCapSentences"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPostDetail"
        android:layout_below="@id/view_ul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/bg_edit_text"
        android:visibility="gone">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="1dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"
            app:shapeAppearance="@style/RoundedCornerShape"
            android:id="@+id/imgPost"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/imgPost"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tvPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:text="@string/ads_owner"
                android:textColor="@color/new_details_color"
                android:maxLines="2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:text="@string/app_name"
                android:textColor="@color/blackNew"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlPostDetail"
        android:layout_above="@id/rlBottom"
        android:id="@+id/rvMessage"/>

</RelativeLayout>