<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FBFC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.RealEstateFragment">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:text="@string/realtors"
            android:textColor="@color/darkGrey"
            android:textSize="20dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imgList"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_list"
                    app:tint="@color/grey"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:paddingVertical="5dp"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:includeFontPadding="false"
                    android:text="@string/list"/>

            </LinearLayout>

            <View
                android:id="@+id/viewList"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/llList"
                android:background="@color/skyBlue"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_map"
                    app:tint="@color/grey"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:paddingVertical="5dp"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:includeFontPadding="false"
                    android:text="@string/map"/>

            </LinearLayout>

            <View
                android:id="@+id/viewMap"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/llMap"
                android:background="@color/skyBlue"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <ImageView
            android:id="@+id/imgFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_filter_new" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cardView"
            android:layout_toStartOf="@id/imgFilter"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            app:cardCornerRadius="30dp"
            android:clipToPadding="false"
            app:cardElevation="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/rl_icon"
            app:contentPadding="3dp"
            app:cardUseCompatPadding="false"
            android:clipChildren="false"
            android:outlineAmbientShadowColor="@color/grey"
            android:outlineSpotShadowColor="@color/grey"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingVertical="10dp"
                android:paddingHorizontal="14dp">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search_new" />

                <EditText
                    android:id="@+id/et_serach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toStartOf="@+id/img_clear_search"
                    android:layout_toEndOf="@+id/img_search"
                    android:background="@null"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:hint="@string/search_real_estate_companies"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_clear_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_clear" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llListing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_services"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="110dp"
                android:clipToPadding="false"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mapView"/>

            <RelativeLayout
                android:id="@+id/rlCompanyDetails"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                android:visibility="gone">

                <include layout="@layout/layout_companies"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>