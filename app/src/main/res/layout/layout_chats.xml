<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="7dp">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPerson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_placeholder"/>

                <ImageView
                    android:id="@+id/imgUnreadDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_blue_circle"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/maroon_red"
                    android:layout_margin="2dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_toEndOf="@+id/rlImage"
                android:textColor="@color/blackNew"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tvMessage"
                android:layout_below="@+id/tvName"
                android:layout_toEndOf="@+id/rlImage"
                android:layout_marginTop="3dp"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_below="@+id/tvMessage"
                android:layout_toEndOf="@+id/rlImage"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="end"
                android:includeFontPadding="false"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ul"
            android:layout_marginVertical="10dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rlPostDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_placeholder"
                app:shapeAppearance="@style/RoundedCornerShape"
                android:id="@+id/imgPost"/>

            <TextView
                android:id="@+id/tvPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:textColor="@color/new_details_color"
                android:maxLines="2"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgPost"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>