<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#8F000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_outline_round"
        android:backgroundTint="@color/whiteNew"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp">
            <ImageView
                android:id="@+id/imv_dismiss"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/uploadProductImage"
                android:textColor="@color/blackNew"
                android:textSize="18dp" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gallery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_blue_square"
            android:layout_marginTop="30dp"
            android:textColor="@color/whiteNew"
            android:text="@string/fromGallery"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:textAllCaps="false"
            android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_blue_square"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:textColor="@color/whiteNew"
            android:text="@string/openCamera"
            android:textAllCaps="false"
            android:textSize="15dp"/>
    </LinearLayout>
</RelativeLayout>