<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AIChatActivity">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:text="@string/baghdad_ai"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/darkGrey"
            android:textSize="20dp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/rlTop"
        android:layout_above="@id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_icon"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/baghdad_ai"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:textColor="@color/blackNew"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/baghdad_ai_message"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                android:layout_marginHorizontal="40dp"
                android:gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_ul"
                android:layout_marginVertical="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvAiChat"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/viewUl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ul"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/imgSendMessage"
            android:layout_below="@+id/viewUl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_message"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toStartOf="@id/imgSendMessage"
            android:hint="@string/enter_message"
            android:layout_centerVertical="true"
            android:paddingHorizontal="20dp"
            android:inputType="textMultiLine|textCapSentences"/>
    </RelativeLayout>

</RelativeLayout>