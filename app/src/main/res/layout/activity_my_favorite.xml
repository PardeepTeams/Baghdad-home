<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MyFavoriteActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_arrow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/hacen_tunisia_bold_regular"
        android:text="@string/my_favorite"
        android:textColor="@color/darkGrey"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvProperties"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_solid"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="@string/properties"
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_blue_new"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="@string/project"
            android:textColor="@color/whiteNew"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:id="@+id/view_ul"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_ul"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:clipToPadding="false"/>

</LinearLayout>