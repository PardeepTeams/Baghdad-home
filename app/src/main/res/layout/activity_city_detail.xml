<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/lin_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivProjectLogo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_placeholder" />

            <!-- Project Title -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Al-Jawahiri City"
                    android:textColor="@color/blackNew"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/google_sans_bold_compat" />

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="6dp"
                        android:text="Agents: 1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/gmp_ref_typeface_plain_regular"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableLeft="@drawable/ic_home_new"
                        android:drawablePadding="6dp"
                        android:text="Properties: 4"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/gmp_ref_typeface_plain_regular"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Social Media"
                    android:textSize="16sp"
                    android:fontFamily="@font/google_sans_bold_compat"
                    android:textColor="@color/blackNew" />

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_facebook"
                        android:padding="8dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img_instagram_more"
                        android:padding="8dp"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Agents (1)"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/google_sans_bold_compat"
                    android:textColor="#000000" />



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- Avatar -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_placeholder"
                            android:scaleType="centerCrop" />

                        <!-- Agent Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                android:id="@+id/tvAgentName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khawatir Company"
                                android:textColor="@color/blackNew"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:fontFamily="@font/google_sans_bold_compat" />

                            <TextView
                                android:id="@+id/tvAgentProperties"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Properties: 4"
                                android:textColor="@color/grey"
                                android:fontFamily="@font/gmp_ref_typeface_plain_regular"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textSize="14sp" />

                            <!-- Buttons -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <Button
                                    android:id="@+id/btnCall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="CALL"
                                    android:backgroundTint="#3F51B5"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:drawableStart="@drawable/ic_call_new"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/google_sans_bold_compat"
                                    android:textColor="@android:color/white"/>

                                <Button
                                    android:id="@+id/btnWhatsapp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="WHATSAPP"
                                    android:backgroundTint="#25D366"
                                    android:maxLines="1"
                                    android:drawableStart="@drawable/ic_whatsapp"
                                    android:singleLine="true"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/google_sans_bold_compat"
                                    android:textColor="@android:color/white"
                                    android:layout_marginStart="8dp"/>
                            </LinearLayout>
                        </LinearLayout>





                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>






    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/lin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:padding="12dp">

        <Button
            android:id="@+id/btnBottomCall"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="CALL"
            android:drawableStart="@drawable/ic_call_new"
            android:backgroundTint="#3F51B5"
            android:fontFamily="@font/google_sans_bold_compat"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnBottomWhatsapp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="WHATSAPP"
            android:drawableStart="@drawable/ic_whatsapp"
            android:fontFamily="@font/google_sans_bold_compat"
            android:textSize="16sp"
            android:backgroundTint="#25D366"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back"
            android:src="@drawable/ic_back_arrow"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_share"
                android:src="@drawable/ic_share_img"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:id="@+id/img_scan"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/img_share"
                android:src="@drawable/ic_nbhd_blue"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
