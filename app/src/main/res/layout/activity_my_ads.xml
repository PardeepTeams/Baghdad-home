<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MyAdsActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_arrow"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/hacen_tunisia_bold_regular"
        android:text="@string/my_ads"
        android:textColor="@color/darkGrey"
        android:textSize="20dp" />

    <View
        android:id="@+id/view_ul"
        android:layout_below="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_ul"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_ul"
        android:paddingBottom="30dp"
        android:clipToPadding="false"/>
</RelativeLayout>