<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFC"
    tools:context=".Activities.FilterAgenciesActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_back"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:text="@string/filter"
            android:textColor="@color/darkGrey"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_solid"
            android:backgroundTint="@color/light_red"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="@string/clear"
            android:textColor="@color/whiteNew"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_blue_new"
            android:backgroundTint="@color/skyBlue"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="@string/done"
            android:textColor="@color/whiteNew"
            android:textSize="16dp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llButtons"
        android:layout_below="@+id/rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:text="@string/choose_the_city"
                android:textColor="@color/darkGrey"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_spinner"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:text="@string/choose_the_neighborhood"
                android:textColor="@color/darkGrey"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_neighborhood"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_spinner"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>