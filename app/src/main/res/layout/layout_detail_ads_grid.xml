<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:background="@color/whiteNew"
        android:outlineAmbientShadowColor="@color/grey"
        android:outlineSpotShadowColor="@color/grey"
        android:elevation="4dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:clipToPadding="true"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp">

                            <ImageView
                                android:id="@+id/imv_property"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/img_placeholder" />

                            <TextView
                                android:id="@+id/tv_sell"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/bg_outline"
                                android:backgroundTint="@color/darkGrey"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="@string/for_sell"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/whiteNew"
                                android:textSize="10dp" />

                            <ImageView
                                android:id="@+id/img_premimum"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:padding="4dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/transpart_bg"
                                android:src="@drawable/premium_svgrepo_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/img_bookmark"
                                android:layout_width="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/transpart_bg"
                                android:padding="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:src="@drawable/ic_heart_outline" />

                            <ImageView
                                android:id="@+id/img_watermark"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:background="@drawable/img_watermark"
                                android:scaleType="centerCrop" />

                        </androidx.constraintlayout.widget.ConstraintLayout>



                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/ad_title"
                        android:textColor="@color/darkGrey"
                        android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_area_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_nbhd_2"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true"
                    android:drawablePadding="7dp"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="@string/street_width"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:drawableStart="@drawable/img_locations"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="7dp"
                    android:singleLine="true"
                    android:text="@string/street_width"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_number_area"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/img_area"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:maxLines="1"
                        android:drawablePadding="7dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_compass_grey"
                        android:singleLine="true"
                        android:text="0 m"
                        android:textColor="@color/darkGrey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_bedroom"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:drawablePadding="7dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_bed_2"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/darkGrey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_batroom"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawablePadding="7dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_bath_2"
                        android:textColor="@color/darkGrey"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:textSize="12sp" />

                </LinearLayout>

                    <TextView
                        android:id="@+id/tv_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_items"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:maxLines="1"
                        android:lineSpacingExtra="0dp"
                        android:lineSpacingMultiplier="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:layout_marginHorizontal="5dp"
                        android:text="@string/ad_details"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_details"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:includeFontPadding="false"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                <!--</RelativeLayout>-->

