<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".Activities.CompanyAdsActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_toEndOf="@+id/imgBack"
            android:layout_width="match_parent"
            app:cardCornerRadius="30dp"
            android:clipToPadding="true"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:outlineAmbientShadowColor="@color/grey"
            android:outlineSpotShadowColor="@color/grey"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingVertical="7dp"
                android:paddingHorizontal="14dp">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search_new" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toStartOf="@+id/imgClearSearch"
                    android:layout_toEndOf="@+id/img_search"
                    android:background="@null"
                    android:fontFamily="@font/hacen_tunisia_bold_regular"
                    android:hint="@string/property_search"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="18sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgClearSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_clear" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCompanyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_placeholder"
                            android:id="@+id/imgBig"/>

                        <ImageView
                            android:id="@+id/img_watermark"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/img_watermark"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:civ_border_color="@color/whiteNew"
                        app:civ_border_width="1dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/img_placeholder"
                        android:elevation="4dp"
                        android:id="@+id/imgCircle"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgBig"
                        android:layout_toEndOf="@id/imgCircle"
                        android:layout_toStartOf="@id/llFollowDetails"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:textSize="16sp"
                            android:id="@+id/tvName"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llFollowDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/imgBig"
                        android:layout_marginTop="10dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvFollow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:text="@string/follow"
                            android:textColor="@color/whiteNew"
                            android:textSize="16sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/bg_button"
                            android:drawablePadding="5dp"
                            app:drawableStartCompat="@drawable/ic_add" />

                        <TextView
                            android:id="@+id/tvFollowersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="@string/followers"
                            android:textColor="@color/skyBlue"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSharePage"
                        android:layout_below="@id/llFollowDetails"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="20dp"
                        android:paddingVertical="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/share_the_office_page"
                        android:textColor="@color/skyBlue"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:textSize="14sp"/>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:textSize="14sp"
                            android:drawablePadding="10dp"
                            android:id="@+id/tvCity"
                            app:drawableStartCompat="@drawable/ic_location"
                            app:drawableTint="@color/greybg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:textSize="14sp"
                            android:drawablePadding="10dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/tvAddress"
                            app:drawableStartCompat="@drawable/ic_menu"
                            app:drawableTint="@color/greybg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:textSize="14sp"
                            android:text="@string/office_manager"
                            android:drawablePadding="10dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/tvManager"
                            app:drawableStartCompat="@drawable/ic_user"
                            app:drawableTint="@color/greybg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/hacen_tunisia_bold_regular"
                            android:textSize="14sp"
                            android:drawablePadding="10dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/tvPhone"
                            app:drawableStartCompat="@drawable/ic_call_new"
                            app:drawableTint="@color/greybg" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/llReels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:text="@string/reels"
                        android:textColor="@color/darkGrey"
                        android:layout_marginHorizontal="10dp"
                        android:includeFontPadding="false"
                        android:textSize="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:padding="5dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            tools:listitem="@layout/layout_agecny_reels"
                            android:id="@+id/rvReels"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hacen_tunisia_bold_regular"
                        android:text="@string/location_on_map"
                        android:textColor="@color/darkGrey"
                        android:layout_marginHorizontal="10dp"
                        android:includeFontPadding="false"
                        android:textSize="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginHorizontal="5dp">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvAdsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property_found"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ads"
                android:layout_marginHorizontal="10dp"
                android:textSize="15dp"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/hacen_tunisia_bold_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/grey_ul"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="30dp"
                android:clipToPadding="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>