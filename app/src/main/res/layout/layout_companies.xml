<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/img_placeholder"
            android:scaleType="centerCrop"
            android:id="@+id/imgBig"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/whiteNew"
            android:src="@drawable/img_placeholder"
            android:layout_marginTop="75dp"
            android:layout_marginStart="15dp"
            android:id="@+id/imgCircle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBig"
            android:layout_toEndOf="@+id/imgCircle"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:textSize="14sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:textColor="@color/blackNew"
            android:id="@+id/tvName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toEndOf="@+id/imgCircle"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/company_address_comp"
            android:textColor="@color/grey"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableTint="@color/grey"
            android:id="@+id/tvAddress"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_toEndOf="@+id/imgCircle"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/ads"
            android:textColor="@color/grey"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:id="@+id/tvAdsCount"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>