<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@drawable/ic_bg_selected_nbhd">

        <ImageView
            android:id="@+id/img_nbhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_nbhd_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/tv_nbhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/img_cancel"
            android:layout_toEndOf="@+id/img_nbhd"
            android:fontFamily="@font/hacen_tunisia_bold_regular"
            android:singleLine="true"
            android:text="@string/nbhd"
            android:textColor="@color/darkGrey"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_cancel"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>

    </RelativeLayout>

</RelativeLayout>