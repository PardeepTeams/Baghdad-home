<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            android:background="@drawable/bg_outline">
            <ImageView
                android:id="@+id/img_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_below="@+id/cv_image"
            android:layout_width="100dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_service"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/img_sofa"
                android:layout_marginEnd="2dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ic_service"
                android:text="@string/furniture"
                android:singleLine="true"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:fontFamily="@font/hacen_tunisia_bold_regular"
                android:textColor="@color/darkGrey" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>